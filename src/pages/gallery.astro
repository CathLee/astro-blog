---
import { getCollection } from 'astro:content'
import LayoutDefault from '~/layouts/LayoutDefault.astro'
import PhotoCard from '~/components/PhotoCard.astro'

// 获取所有影集内容并按日期排序
const albumEntries = await getCollection('album')
const sortedAlbums = albumEntries.sort((a, b) => {
  return b.data.date.getTime() - a.data.date.getTime()
})

// 按年份分组
const albumsByYear = sortedAlbums.reduce(
  (acc, album) => {
    const year = album.data.date.getFullYear()
    if (!acc[year]) {
      acc[year] = []
    }
    acc[year].push(album)
    return acc
  },
  {} as Record<number, typeof sortedAlbums>,
)

// 获取所有年份并排序（从新到旧）
const years = Object.keys(albumsByYear)
  .map(Number)
  .sort((a, b) => b - a)
---

<LayoutDefault>
  <div class="gallery-container">
    <header class="gallery-header">
      <h1 class="gallery-title">影集</h1>
      <p class="gallery-subtitle">用镜头记录生活的点滴瞬间</p>
    </header>

    <div class="timeline">
      {
        years.map((year) => (
          <div class="timeline-year">
            <div class="year-marker">
              <div class="year-dot" />
              <h2 class="year-label">{year}</h2>
            </div>
            <div class="year-content">
              {albumsByYear[year].map((album) => (
                <PhotoCard
                  title={album.data.title}
                  date={album.data.date}
                  image={album.data.image}
                  location={album.data.location}
                  description={album.body || ''}
                />
              ))}
            </div>
          </div>
        ))
      }
    </div>

    {
      sortedAlbums.length === 0 && (
        <div class="empty-state">
          <p class="empty-hint">还没有添加任何照片，快去创建第一张吧！</p>
          <p class="empty-hint">
            在 <code class="bg-[var(--c-bg-secondary,#f5f5f5)] px-2 py-1 rounded-1 font-mono">src/content/album/</code>{' '}
            目录下创建 markdown 文件
          </p>
        </div>
      )
    }
  </div>
</LayoutDefault>

<script>
  import { setupGalleryLightbox } from '~/scripts/ui/gallery-lightbox'

  setupGalleryLightbox()
</script>

<style>
  /* Performance optimizations for smooth scrolling */
  .gallery-container {
    /* Enable GPU acceleration */
    transform: translateZ(0);
    /* Optimize rendering performance */
    contain: layout style paint;
  }

  /* 时间轴主线 - 伪元素渐变效果 */
  .timeline {
    /* Optimize for scrolling performance */
    contain: layout style;
  }

  .timeline::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    width: 3px;
    background: linear-gradient(to bottom, var(--c-primary) 0%, var(--c-primary) 100%);
    opacity: 0.2;
    /* GPU acceleration */
    transform: translateZ(0);
  }

  /* PhotoCard hover effect - optimized for performance */
  .photo-card {
    /* Prepare for hover transform */
    backface-visibility: hidden;
    -webkit-backface-visibility: hidden;
    transform: translateZ(0);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .photo-card:hover {
    transform: translateY(-4px) translateZ(0);
    box-shadow: 0 8px 24px var(--c-shadow);
  }

  /* Year marker - optimized for sticky positioning */
  .year-marker {
    /* Use GPU for smooth sticky scrolling */
    backface-visibility: hidden;
    -webkit-backface-visibility: hidden;
  }

  @media (max-width: 768px) {
    .timeline::before {
      width: 2px;
    }
  }
</style>
