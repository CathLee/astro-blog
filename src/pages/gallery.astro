---
import { getCollection } from 'astro:content'
import LayoutDefault from '~/layouts/LayoutDefault.astro'
import PhotoCard from '~/components/PhotoCard.astro'

// 获取所有影集内容并按日期排序
const albumEntries = await getCollection('album')
const sortedAlbums = albumEntries.sort((a, b) => {
  return b.data.date.getTime() - a.data.date.getTime()
})

// 按年份分组
const albumsByYear = sortedAlbums.reduce((acc, album) => {
  const year = album.data.date.getFullYear()
  if (!acc[year]) {
    acc[year] = []
  }
  acc[year].push(album)
  return acc
}, {} as Record<number, typeof sortedAlbums>)

// 获取所有年份并排序（从新到旧）
const years = Object.keys(albumsByYear).map(Number).sort((a, b) => b - a)
---

<LayoutDefault>
  <div class="gallery-container">
    <header class="gallery-header">
      <h1 class="gallery-title">影集</h1>
      <p class="gallery-subtitle">用镜头记录生活的点滴瞬间</p>
    </header>

    <div class="timeline">
      {years.map((year) => (
        <div class="timeline-year">
          <div class="year-marker">
            <div class="year-dot"></div>
            <h2 class="year-label">{year}</h2>
          </div>
          <div class="year-content">
            {albumsByYear[year].map((album) => (
              <PhotoCard
                title={album.data.title}
                date={album.data.date}
                image={album.data.image}
                location={album.data.location}
                description={album.body || ''}
              />
            ))}
          </div>
        </div>
      ))}
    </div>

    {sortedAlbums.length === 0 && (
      <div class="empty-state">
        <p>还没有添加任何照片，快去创建第一张吧！</p>
        <p class="hint">在 <code>src/content/album/</code> 目录下创建 markdown 文件</p>
      </div>
    )}
  </div>
</LayoutDefault>

<style>
  .gallery-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  .gallery-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .gallery-title {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
    color: var(--c-primary);
  }

  .gallery-subtitle {
    font-size: 1.125rem;
    color: var(--c-text-secondary, #666);
    margin: 0;
  }

  .timeline {
    position: relative;
    padding-left: 2rem;
  }

  /* 时间轴主线 */
  .timeline::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    width: 3px;
    background: linear-gradient(to bottom,
      var(--c-primary) 0%,
      var(--c-primary) 100%);
    opacity: 0.2;
  }

  .timeline-year {
    position: relative;
    margin-bottom: 3rem;
  }

  .year-marker {
    display: flex;
    align-items: center;
    margin-bottom: 2rem;
    margin-left: -2rem;
    position: sticky;
    top: 1rem;
    z-index: 10;
    background: var(--c-bg);
    padding: 0.5rem 0;
  }

  .year-dot {
    width: 20px;
    height: 20px;
    border-radius: 50%;
    background: var(--c-primary);
    border: 4px solid var(--c-bg);
    box-shadow: 0 0 0 3px var(--c-primary);
    flex-shrink: 0;
    z-index: 2;
  }

  .year-label {
    font-size: 2rem;
    font-weight: 700;
    color: var(--c-primary);
    margin: 0 0 0 1.5rem;
    letter-spacing: 0.05em;
  }

  .year-content {
    display: flex;
    flex-direction: column;
  }

  .empty-state {
    text-align: center;
    padding: 4rem 2rem;
    color: var(--c-text-secondary, #888);
  }

  .empty-state p {
    margin-bottom: 1rem;
  }

  .empty-state code {
    background: var(--c-bg-secondary, #f5f5f5);
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
    font-family: monospace;
  }

  .hint {
    font-size: 0.875rem;
  }

  @media (max-width: 768px) {
    .gallery-header {
      margin-bottom: 2rem;
    }

    .gallery-title {
      font-size: 2rem;
    }

    .gallery-subtitle {
      font-size: 1rem;
    }

    .timeline {
      padding-left: 1.5rem;
    }

    .timeline::before {
      width: 2px;
    }

    .year-marker {
      margin-left: -1.5rem;
      position: relative;
      top: auto;
    }

    .year-dot {
      width: 16px;
      height: 16px;
      border: 3px solid var(--c-bg);
      box-shadow: 0 0 0 2px var(--c-primary);
    }

    .year-label {
      font-size: 1.5rem;
      margin-left: 1rem;
    }
  }
</style>
