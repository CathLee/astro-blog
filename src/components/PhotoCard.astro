---
interface Props {
  title: string
  date: Date
  image: string
  location?: string
  description: string
}

const { title, date, image, location, description } = Astro.props

import { formatDate } from '~/utils'
---

<article class="photo-card">
  <div class="photo-image">
    <img src={image} alt={title} loading="lazy" class="w-full h-full object-cover transition-transform duration-300 ease" />
  </div>
  <div class="photo-content">
    <h3 class="photo-title">{title}</h3>
    <div class="photo-meta">
      <time datetime={date.toISOString()}>{formatDate(date, 'YYYY-MM-DD')}</time>
      {location && <span class="op-80">· {location}</span>}
    </div>
    <div class="photo-description">
      {description}
    </div>
  </div>
</article>

<style>
  /* 图片悬停缩放效果 - 需要嵌套选择器 */
  .photo-card:hover .photo-image img {
    transform: scale(1.05);
  }
</style>
