---
interface Props {
  title: string
  date: Date
  image: string
  location?: string
  description: string
}

const { title, date, image, location, description } = Astro.props

import { formatDate } from '~/utils'
---

<article class="photo-card">
  <div class="photo-image">
    <img src={image} alt={title} loading="lazy" />
  </div>
  <div class="photo-content">
    <h3 class="photo-title">{title}</h3>
    <div class="photo-meta">
      <time datetime={date.toISOString()}>{formatDate(date, 'YYYY-MM-DD')}</time>
      {location && <span class="photo-location">· {location}</span>}
    </div>
    <div class="photo-description">
      {description}
    </div>
  </div>
</article>

<style>
  .photo-card {
    display: grid;
    grid-template-columns: 2fr 3fr;
    gap: 2rem;
    margin-bottom: 3rem;
    padding: 1.5rem;
    background: var(--c-bg);
    border-radius: 8px;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .photo-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px var(--c-shadow);
  }

  .photo-image {
    overflow: hidden;
    border-radius: 6px;
    aspect-ratio: 4 / 3;
  }

  .photo-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .photo-card:hover .photo-image img {
    transform: scale(1.05);
  }

  .photo-content {
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 0.75rem;
  }

  .photo-title {
    font-size: 1.5rem;
    font-weight: 600;
    margin: 0;
    color: var(--c-primary);
  }

  .photo-meta {
    font-size: 0.875rem;
    color: var(--c-text-secondary, #666);
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .photo-location {
    color: var(--c-text-secondary, #888);
  }

  .photo-description {
    font-size: 1rem;
    line-height: 1.8;
    color: var(--c-text);
  }

  /* 响应式设计 */
  @media (max-width: 768px) {
    .photo-card {
      grid-template-columns: 1fr;
      gap: 1rem;
      padding: 1rem;
    }

    .photo-image {
      aspect-ratio: 16 / 9;
    }

    .photo-title {
      font-size: 1.25rem;
    }

    .photo-description {
      font-size: 0.9375rem;
    }
  }
</style>
